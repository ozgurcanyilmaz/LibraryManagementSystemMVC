<!DOCTYPE html>
<html lang="en">
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Register</title>
    <link rel="stylesheet" href="~/css/register.css">
    <script src="~/js/login.js" defer></script>
    <script src="~/js/script.js" defer></script>
</head>

<body>
    <div class="register-container">
        <h2>Student Register</h2>

        <!-- Form with asp-action and asp-controller -->
        <form asp-action="Register" asp-controller="Account" method="post" id="registerForm">
            <!-- Username Field -->
            <label for="Username">Name</label>
            <input type="text" id="Username" name="Username" placeholder="Enter your name" value="@Model?.Username" required>
            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
            {
                <span class="error">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</span>
            }

            <!-- Email Field -->
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" placeholder="Enter your email" value="@Model?.Email" required>
            @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
            {
                <span class="error">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span>
            }

            <!-- Password Field -->
            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password" placeholder="Enter your password" required>

            <!-- Confirm Password Field -->
            <label for="ConfirmPassword">Confirm Password</label>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Re-enter your password" required>
            @if (ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0)
            {
                <span class="error">@ViewData.ModelState["ConfirmPassword"].Errors[0].ErrorMessage</span>
            }

            <!-- Submit Button -->
            <button type="submit">Register</button>
        </form>

        <p>Already have an account? <a href="/Account/StudentLogin">Log in</a></p>
    </div>

    <!-- Frontend Validation Script -->
    <script>
        document.getElementById("registerForm").addEventListener("submit", function (event) {
            const password = document.getElementById("Password").value;
            const confirmPassword = document.getElementById("ConfirmPassword").value;

            if (password !== confirmPassword) {
                event.preventDefault(); // Prevent form submission
                alert("Passwords do not match."); // Show error message
            }
        });
    </script>
</body>
</html>
