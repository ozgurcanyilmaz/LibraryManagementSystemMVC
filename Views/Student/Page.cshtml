@model LibraryManagementSystem.Models.PageViewModel

<!DOCTYPE html>
<html lang="en">
@{
    Layout = null;
    var rentedBooks = ViewBag.RentedBooks as List<dynamic>; // Backend'den gelen kiralanmış kitaplar
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/student_page.css">
    <script src="~/js/script.js" defer></script>
    <script src="https://kit.fontawesome.com/a270fcf83b.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <!-- Header -->
        <header>
            <h1>EYO Library System</h1>
            <button class="logout-btn" onclick="logout()">Log Out</button>
        </header>

        <!-- Search Section -->
        <section class="search">
            <input type="text" placeholder="Search for books..." class="search-bar" oninput="filterBooks()">
        </section>

        <!-- Last Added Books Section -->
        <section class="last-added-books">
            <h2>Last Added Books</h2>
            <div class="scroll-container">
                @if (Model != null && Model.LastAddedBooks.Any())
                {
                    @foreach (var book in Model.LastAddedBooks)
                    {
                        <div class="book-card">
                            <a asp-action="Details" asp-route-id="@book.Id">
                                <img src="@book.ImagePath" alt="@book.Title">
                                <div class="book-info">
                                    <h3>@book.Title</h3>
                                    <p>@book.Author</p>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p>No books available. Add some books to get started!</p>
                }
            </div>
        </section>


        <!-- My Rented Books Section -->
        <section class="rented-books">
            <h2>My Rented Books</h2>
            <div class="buttons">
                <button class="action-btn" onclick="window.location.href='/Student/ReturnBook'">Return a Book</button>
            </div>
            <div class="book-container" id="rentedBooks">
                @if (Model != null && Model.LastRentedBooks.Any())
                {
                    @foreach (var book in Model.LastRentedBooks)
                    {
                        <div class="book-card">
                            <img src="@book.ImagePath" alt="@book.Title">
                            <h3>@book.Title</h3>
                        </div>
                    }
                }
                else
                {
                    <p>No rented books available.</p>
                }
            </div>
        </section>
    </div>



    <!-- JavaScript -->
    <script>
        // Filter books by search input
        function filterBooks() {
            const searchInput = document.querySelector('.search-bar').value.toLowerCase();
            const newBooks = document.querySelectorAll('.last-added-books .book-card');
            const rentedBooks = document.querySelectorAll('#rentedBooks .book-card');

            // Filter new books
            newBooks.forEach(book => {
                const title = book.querySelector('h3').textContent.toLowerCase();
                book.style.display = title.includes(searchInput) ? '' : 'none';
            });

            // Filter rented books
            rentedBooks.forEach(book => {
                const title = book.querySelector('h3').textContent.toLowerCase();
                book.style.display = title.includes(searchInput) ? '' : 'none';
            });
        }

        // Show book details in popup
        function showBookDetails(title, author, description) {
            document.getElementById('popup-title').innerText = title;
            document.getElementById('popup-author').innerText = 'Author: ' + author;
            document.getElementById('popup-description').innerText = description;
            document.getElementById('book-popup').style.display = 'flex';
        }

        // Close the popup
        function closePopup() {
            document.getElementById('book-popup').style.display = 'none';
        }
    </script>
</body>
</html>
